<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/channel_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/channel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/channel_logo"
            android:padding="@dimen/default_spacing"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            tools:text="Channel name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_below="@+id/channel_title"
            tools:text="#ses"
            android:textSize="20sp"
            android:padding="@dimen/default_spacing"
            android:textColor="#009cb8"
            />

        <Button
            android:id="@+id/join_channel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="17sp"
            android:layout_marginLeft="@dimen/default_spacing"
            android:layout_marginRight="@dimen/default_spacing"
            android:layout_marginBottom="@dimen/default_spacing"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/channel_logo"
            android:background="@drawable/button_selector"
            android:text="Join"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>