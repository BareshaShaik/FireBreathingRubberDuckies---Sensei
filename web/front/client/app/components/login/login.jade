div.login
	.input-field
		input(type="text", id="username" ng-model="user.username")
		label(for="username") Username
	.input-field
		input(type="password", id="pass" ng-model="user.password")
		label(for="pass") Password
	.login__buttons
		a.waves-effect.waves-light.btn.btn-large.btn--submit
			| SUBMIT
		.separator
			h6.text or 
			hr
		a.waves-effect.waves-light.btn-large.btn--facebook(ng-click="vm.loginFacebook()")
			| FACEBOOK


